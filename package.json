{
  "name": "artof-select",
  "description": "The <Select /> component for React",
  "keywords": [
    "select",
    "multiselect",
    "multiple",
    "form component",
    "react",
    "react-component",
    "component"
  ],
  "version": "1.11.8",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "author": {
    "name": "Oleg Frolov",
    "url": "https://artof.pro"
  },
  "license": "MIT",
  "homepage": "https://o-mega.github.io/artof-select",
  "repository": {
    "url": "https://github.com/o-mega/artof-select.git"
  },
  "scripts": {
    "lint": "eslint --ext **/*.{ts,tsx} --ignore-pattern dist --ignore-pattern node_modules",
    "test": "jest",
    "dev": "start-storybook -p 6006",
    "build": "eslint --fix --max-warnings=0 && yarn test && yarn build:select && yarn build:storybook && git add .",
    "build:select": "rollup -c ./rollup.config.js --silent && yarn build:clean",
    "build:storybook": "build-storybook -o ./docs --quiet",
    "build:clean": "rm ./dist/index.esm.scss && rm ./dist/index.esm.d.ts",
    "release": "standard-version && git push --follow-tags origin master && npm publish"
  },
  "dependencies": {
    "react-merge-refs": "1.1.0",
    "react-popper": "2.2.5",
    "@popperjs/core": "2.9.2"
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@babel/preset-env": "7.13.15",
    "@babel/preset-react": "7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@storybook/addon-knobs": "^6.1.17",
    "@storybook/react": "^6.1.17",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.5",
    "@types/node": "^14.14.41",
    "@types/react": "17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@wessberg/rollup-plugin-ts": "^1.3.14",
    "babel-loader": "^8.2.2",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "react": "17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "17.0.2",
    "rollup": "^2.45.2",
    "rollup-plugin-bundle-scss": "^0.1.3",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass-loader": "^10.1.1",
    "standard-version": "^9.2.0",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "engines": {
    "node": ">=14.15.0",
    "yarn": ">=1.22.0"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not ie < 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "jsx-a11y",
      "prettier",
      "react",
      "react-hooks",
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "settings": {
      "react": {
        "version": "latest"
      }
    },
    "globals": {
      "module": true,
      "process": true
    },
    "env": {
      "jest/globals": true,
      "browser": true
    },
    "rules": {
      "react/prop-types": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "no-empty-function": "off",
      "@typescript-eslint/no-empty-function": "off"
    }
  },
  "jest": {
    "cacheDirectory": ".jest-cache",
    "collectCoverage": true,
    "coverageReporters": [
      "lcov"
    ],
    "coverageDirectory": "test-coverage",
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "testPathIgnorePatterns": [
      "<rootDir>/(?:.+?)/lib/"
    ],
    "moduleNameMapper": {
      "^.+\\.(scss|svg)$": "identity-obj-proxy"
    }
  }
}
