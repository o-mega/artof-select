{
  "name": "artof-select",
  "description": "The <Select /> component for React",
  "keywords": [
    "select",
    "multiselect",
    "multiple",
    "form component",
    "react",
    "react-component",
    "component"
  ],
  "version": "1.11.9",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "author": {
    "name": "Oleg Frolov",
    "url": "https://artof.pro"
  },
  "license": "MIT",
  "homepage": "https://o-mega.github.io/artof-select",
  "repository": {
    "url": "https://github.com/o-mega/artof-select.git"
  },
  "scripts": {
    "lint": "eslint --ext **/*.{ts,tsx} --ignore-pattern dist --ignore-pattern node_modules",
    "test": "jest",
    "dev": "start-storybook -p 6006",
    "build": "eslint --fix --max-warnings=0 && npm run test && npm run build:select && npm run build:storybook && git add .",
    "build:select": "rollup -c ./rollup.config.js --silent && npm run build:clean",
    "build:storybook": "rm ./docs/*.* && build-storybook -o ./docs --quiet",
    "build:clean": "rm ./dist/index.esm.scss && rm ./dist/index.esm.d.ts",
    "release": "standard-version && git push --follow-tags origin master && npm publish"
  },
  "dependencies": {
    "@popperjs/core": "2.11.5",
    "react-merge-refs": "1.1.0",
    "react-popper": "2.2.5"
  },
  "devDependencies": {
    "@babel/core": "7.17.9",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-react": "7.16.7",
    "@babel/preset-typescript": "7.16.7",
    "@rollup/plugin-babel": "5.3.1",
    "@rollup/plugin-commonjs": "21.0.3",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@storybook/addon-controls": "6.4.20",
    "@storybook/addon-essentials": "^6.4.20",
    "@storybook/builder-webpack5": "^6.4.20",
    "@storybook/manager-webpack5": "^6.4.20",
    "@storybook/react": "6.4.20",
    "@testing-library/jest-dom": "5.12.0",
    "@testing-library/react": "11.2.6",
    "@testing-library/user-event": "13.1.5",
    "@types/node": "14.14.41",
    "@types/react": "17.0.3",
    "@typescript-eslint/eslint-plugin": "5.18.0",
    "@typescript-eslint/parser": "5.18.0",
    "@wessberg/rollup-plugin-ts": "2.0.4",
    "babel-loader": "8.2.4",
    "eslint": "8.12.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "26.1.3",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.4.0",
    "html-webpack-plugin": "^5.5.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.6.3",
    "prettier": "2.6.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-test-renderer": "17.0.2",
    "rollup": "2.45.2",
    "rollup-plugin-bundle-scss": "0.1.3",
    "rollup-plugin-clear": "2.0.7",
    "rollup-plugin-delete": "2.0.0",
    "rollup-plugin-terser": "7.0.2",
    "sass": "^1.49.11",
    "sass-loader": "12.6.0",
    "standard-version": "9.3.2",
    "storybook-addon-sass-postcss": "^0.1.0",
    "typescript": "4.6.3"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "engines": {
    "node": ">=14.15.0",
    "yarn": ">=1.22.0"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not ie < 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "jsx-a11y",
      "prettier",
      "react",
      "react-hooks",
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "settings": {
      "react": {
        "version": "latest"
      }
    },
    "globals": {
      "module": true,
      "process": true
    },
    "env": {
      "jest/globals": true,
      "browser": true
    },
    "rules": {
      "react/prop-types": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "no-empty-function": "off",
      "@typescript-eslint/no-empty-function": "off"
    }
  },
  "jest": {
    "cacheDirectory": ".jest-cache",
    "collectCoverage": true,
    "coverageReporters": [
      "lcov"
    ],
    "coverageDirectory": "test-coverage",
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "testPathIgnorePatterns": [
      "<rootDir>/(?:.+?)/lib/"
    ],
    "moduleNameMapper": {
      "^.+\\.(scss|svg)$": "identity-obj-proxy"
    }
  }
}
