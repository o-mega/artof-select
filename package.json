{
  "name": "artof-select",
  "description": "The <Select /> component for React",
  "keywords": [
    "select",
    "multiselect",
    "multiple",
    "form component",
    "react",
    "react-component",
    "component"
  ],
  "version": "1.13.2",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "author": {
    "name": "Oleg Frolov",
    "url": "https://artof.pro"
  },
  "license": "MIT",
  "homepage": "https://o-mega.github.io/artof-select",
  "repository": {
    "url": "https://github.com/o-mega/artof-select.git"
  },
  "scripts": {
    "lint": "eslint --ext **/*.{ts,tsx} --ignore-pattern dist --ignore-pattern node_modules",
    "test": "jest",
    "dev": "start-storybook -p 6006",
    "build": "eslint --fix --max-warnings=0 && npm run test && npm run build:select && npm run build:storybook && git add .",
    "build:select": "rollup -c ./rollup.config.js --bundleConfigAsCjs --silent && npm run build:clean",
    "build:storybook": "rm ./docs/*.* && build-storybook -o ./docs --quiet",
    "build:clean": "rm ./dist/index.esm.scss && rm ./dist/index.esm.d.ts",
    "release": "standard-version && git push --follow-tags origin master && npm publish"
  },
  "publishConfig": {
    "@o-mega:registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "@popperjs/core": "2.11.6"
  },
  "devDependencies": {
    "@babel/core": "7.19.6",
    "@babel/preset-env": "7.19.4",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.18.6",
    "@rollup/plugin-babel": "6.0.2",
    "@rollup/plugin-commonjs": "23.0.2",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@storybook/addon-controls": "6.5.13",
    "@storybook/addon-essentials": "6.5.13",
    "@storybook/builder-webpack5": "6.5.13",
    "@storybook/manager-webpack5": "6.5.13",
    "@storybook/react": "6.5.13",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.4.3",
    "@types/node": "18.11.5",
    "@types/react": "18.0.22",
    "@typescript-eslint/eslint-plugin": "5.41.0",
    "@typescript-eslint/parser": "5.41.0",
    "babel-loader": "8.2.5",
    "eslint": "8.26.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "27.1.3",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.31.10",
    "eslint-plugin-react-hooks": "4.6.0",
    "html-webpack-plugin": "5.5.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "29.2.2",
    "jest-environment-jsdom": "29.2.2",
    "prettier": "2.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-test-renderer": "18.2.0",
    "rollup": "3.2.3",
    "rollup-plugin-bundle-scss": "0.1.3",
    "rollup-plugin-clear": "2.0.7",
    "rollup-plugin-delete": "2.0.0",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-ts": "3.0.2",
    "sass": "1.55.0",
    "sass-loader": "13.1.0",
    "standard-version": "9.5.0",
    "storybook-addon-sass-postcss": "0.1.3",
    "typescript": "4.8.4"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "engines": {
    "node": ">=14.15.0",
    "yarn": ">=1.22.0"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not ie < 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "jsx-a11y",
      "prettier",
      "react",
      "react-hooks",
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "settings": {
      "react": {
        "version": "latest"
      }
    },
    "globals": {
      "module": true,
      "process": true
    },
    "env": {
      "jest/globals": true,
      "browser": true
    },
    "rules": {
      "react/prop-types": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "no-empty-function": "off",
      "@typescript-eslint/no-empty-function": "off"
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/(?:.+?)/lib/"
    ],
    "moduleNameMapper": {
      "^.+\\.(scss|svg)$": "identity-obj-proxy"
    },
    "transform": {
      "\\.tsx?$": "babel-jest",
      "<rootDir>/node_modules/react-merge-refs": "babel-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/react-merge-refs"
    ]
  }
}
